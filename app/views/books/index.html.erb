<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-striped table-bordered table-hover datatable" id="book-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Image url</th>
      <th></th>
      <% if can? :update, Book %>
        <th></th>
      <% end %>
      <% if can? :destroy, Book %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.image_url %></td>
        <td><%= link_to 'Show', book %></td>
        <% if can? :update, Book %>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <% end %>
        <% if can? :destroy, Book %>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>


<% if can? :create, Book %>
  <%= link_to 'New Book', new_book_path %>
<% end %>

<script>
$(document).ready( function () {
    $('#book-table').DataTable();
} );
</script>
